<div class="container">
  <h2><%= @list.name %></h2>

  <% @list.bookmarks.each do |bookmark| %>
    <p>
      <%= bookmark.movie.title %>
      <img src='https://image.tmdb.org/t/p/w500/<%= bookmark.movie.poster_url %>'>
      <%= link_to 'Remove bookmark', list_bookmark_path(@list, bookmark), method: :delete, data: { confirm: "Are you sure?" }%>
    </p>
  <% end %>
  <br>
  <%= link_to 'Add bookmark', new_list_bookmark_path(@list) %>
  <br>
  <%= link_to 'Back', lists_path %>
</div>
